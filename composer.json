{
    "name": "joonaskaskisola/taskmanager",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "require": {
        "php": ">=7.0.0",
        "symfony/symfony": "2.8.*",
        "doctrine/orm": "^2.4.8",
        "doctrine/doctrine-bundle": "~1.4",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",
        "fzaninotto/faker": "^1.6",
        "giggsey/libphonenumber-for-php": "^7.4",
        "soyuka/seed-bundle": "^1.0",
        "cakephp/chronos": "^1.1",
        "friendsofsymfony/user-bundle": "~2.0@dev",
        "qandidate/symfony-json-request-transformer": "^1.2",
        "scheb/two-factor-bundle": "^2.8",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "sensio/generator-bundle": "~3.0",
        "symfony/phpunit-bridge": "~2.7",
        "heroku/heroku-buildpack-php": "*"
    },
    "scripts": {
        "pre-install-cmd": [
            "AppBundle\\Composer\\HerokuEnvironment::populateEnvironment"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "compile": [
            "echo \"Running webpack..\"; ./node_modules/webpack/bin/webpack.js",
            "echo \"Removing app_dev.php..\"; rm web/app_dev.php",
            "echo \"Updating db schema..\"; app/console doctrine:schema:update --force"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "secret": "APP_SECRET",

                "database_name": "DATABASE_NAME",
                "database_port": "DATABASE_PORT",
                "database_host": "DATABASE_HOST",
                "database_user": "DATABASE_USER",
                "database_password": "DATABASE_PASSWORD",

                "memcache_server": "MEMCACHE_SERVER",
                "memcache_user": "MEMCACHE_USERNAME",
                "memcache_pass": "MEMCACHE_PASSWORD",
                "memcache_port": "MEMCACHE_PORT",

                "elastic_scheme": "ELASTI_SCHEME",
                "elastic_host": "ELASTIC_HOST",
                "elastic_user": "ELASTIC_USER",
                "elastic_pass": "ELASTIC_PASSWORD",
                "elastic_port": "ELASTIC_PORT"
            }
        }
    }
}
