{% block grid %}
    {% if users is empty %}
        {% trans %}<h4>no_users</h4>{% endtrans %}
    {% else %}

        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">firstName</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}lastName{% endtrans %}</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}username{% endtrans %}</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}group{% endtrans %}</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}phone{% endtrans %}</th>
                    {% if nocustomername is defined %}
                    {% else %}
                        <th class="mdl-data-table__cell--non-numeric">{% trans %}customer{% endtrans %}</th>
                    {% endif %}
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                    <tr data-uri="{{ path('editUser', {'id': user.id }) }}" class="pointertr user-{{ user.enabled == true ? 'enabled' : 'disabled' }}">
                        <td class="mdl-data-table__cell--non-numeric">{{ user.firstName }}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{ user.lastName }}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{ user.username }}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{ user.roles[0] }}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{ user.phone }}</td>
                        {% if nocustomername is defined %}
                        {% else %}
                            <td class="mdl-data-table__cell--non-numeric">{{ user.customer.name }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
