{% block grid %}

    {% if customers is empty %}
        {% trans %}<h4>no_customers</h4>{% endtrans %}
    {% else %}

        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}customerName{% endtrans %}</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}businessId{% endtrans %}</th>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}createdAt{% endtrans %}</th>
                </tr>
            </thead>

            <tbody>
            {% for customer in customers %}
                <tr data-uri="{{ path('editCustomer', {'id': customer.id}) }}" class="pointertr">
                    <td class="mdl-data-table__cell--non-numeric">{{ customer.name }}</td>
                    <td class="mdl-data-table__cell--non-numeric">{{ customer.businessId }}</td>
                    <td class="mdl-data-table__cell--non-numeric">{{ customer.createdAt|date('d.m.Y H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
