{% block grid %}

    {% if categories is empty %}
        {% trans %}<h4>no_categories</h4>{% endtrans %}
    {% else %}

        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">{% trans %}category{% endtrans %}</th>
                </tr>
            </thead>

            <tbody>
            {% for category in categories %}
                <tr data-uri="{{ path('editCategory', {'id': category.id}) }}" class="pointertr">
                    <td class="mdl-data-table__cell--non-numeric">{{ category.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}
{% endblock %}
