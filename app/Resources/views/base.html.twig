<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}TaskManager{% endblock %}</title>
        <meta name="robots" content="noindex, nofollow" />
        {% block stylesheets %}
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.blue_grey-indigo.min.css">

            <link rel="stylesheet" href="/css/datepicker.min.css" type="text/css">
            <link rel="stylesheet" href="/css/selectric.css" type="text/css">
            <link rel="stylesheet" href="/css/notifications.css" type="text/css">
            <link rel="stylesheet" href="/css/react-select.css" type="text/css">
            <link rel="stylesheet" href="/css/taskmanager.css" type="text/css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
    </head>
    <body>
        <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
            <header class="mdl-layout__header">
                <div class="mdl-layout__header-row">

                    <div id="time-tracking-snackbar" class="mdl-js-snackbar mdl-snackbar">
                        <div class="mdl-snackbar__text"></div>
                        <button class="mdl-snackbar__action" type="button"></button>
                    </div>

                    <div class="material-icons mdl-badge mdl-badge--overlap">timer</div>

                    <button
                            id="time-tracking"
                            data-ajax="true"
                            data-uri="{{ path('startUserTime') }}"
                            data-uri-reverse="{{ path('endUserTime') }}"
                            data-status="{{ path('statusUserTime') }}"
                            class="mdl-button mdl-js-button mdl-button--icon">
                        <i class="material-icons" id="time-tracking-icon">play_arrow</i>
                    </button>

                    <div class="mdl-layout-spacer"></div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                      mdl-textfield--floating-label mdl-textfield--align-right">
                        <label class="mdl-button mdl-js-button mdl-button--icon"
                               for="fixed-header-drawer-exp">
                            <i class="material-icons">search</i>
                        </label>
                        <div class="mdl-textfield__expandable-holder">
                            <input class="mdl-textfield__input" type="text" name="search"
                                   id="fixed-header-drawer-exp">
                        </div>
                    </div>
                    <div class="mdl-layout__header-row">
                        <div class="mdl-layout-spacer"></div>
                        <!-- Navigation -->
                        <nav class="mdl-navigation">
                            <a class="mdl-navigation__link" href="{{ path('listTimeRow') }}">Time tracking</a>
                            <a class="mdl-navigation__link" href="{{ path('listCustomer') }}">Customers</a>
                            <a class="mdl-navigation__link" href="{{ path('listTask') }}">Tasks</a>
                            <a class="mdl-navigation__link" href="{{ path('listInvoice') }}">Invoices</a>
                        </nav>
                    </div>

                    <a class="mdl-navigation__link" href="{{ path('listPrivateMessage') }}">
                        <i class="material-icons">mail</i>
                    </a>
                </div>
            </header>

            <div class="mdl-layout__drawer">
                <span class="mdl-layout-title">TaskManager</span>
                <nav class="mdl-navigation">
                    <a class="mdl-navigation__link" href="{{ path('editUser', {'id': app.user.id}) }}">Profile</a>
                    <a class="mdl-navigation__link" href="{{ path('listUser') }}">Users</a>
                    <a class="mdl-navigation__link" href="{{ path('listGroup') }}">Groups</a>
                    <a class="mdl-navigation__link" href="{{ path('listCategory') }}">Categories</a>
                    <a class="mdl-navigation__link" href="{{ path('listTaskCycle') }}">Task cycles</a>
                    <a class="mdl-navigation__link" href="{{ path('listItem') }}">Items</a>
                    <a class="mdl-navigation__link" href="{{ path('listUnit') }}">Units</a>
                    <a class="mdl-navigation__link" href="{{ path('listCountry') }}">Countries</a>
                    <a class="mdl-navigation__link logout-link" href="{{ logout_path('main') }}">Logout</a>
                </nav>
            </div>

            <main class="mdl-layout__content">
                <div class="page-content" id="content">
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>

        {% block javascripts %}
            <script src="/js/material.min.js"></script>
            <script src="/js/jquery-2.2.4.min.js"></script>
            <script src="/js/datepicker.js"></script>
            <script src="/js/i18n/datepicker.en.js"></script>
            <script src="/js/jquery.selectric.js"></script>
            <script src="/js/axios.min.js"></script>
            <script src="/js/react.min.js"></script>
            <script src="/js/react-dom.min.js"></script>
            <script src="/js/taskmanager.js"></script>
            {% block reactjs %}{% endblock %}
        {% endblock %}
    </body>
</html>
