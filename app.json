{
    "name": "taskmanager",
    "description": "taskmanager",
    "repository": "https://github.com/joonaskaskisola/taskmanager",
    "success_url": "/",
    "addons": [
        "cleardb:ignite",
        "memcachedcloud"
    ],
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        },
        {
            "url": "heroku/php"
        }
    ],
    "env": {
        "SYMFONY_ENV": {
            "value": "prod"
        },
        "APP_SECRET": {
            "value": "appsecretgoeshere"
        }
    },
    "scripts": {
        "postdeploy": "php app/console doctrine:schema:update --force"
    }
}
